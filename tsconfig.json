{
    "compilerOptions": {
      "outDir": "./typings/slopes",
      "baseUrl": ".",
      "module": "commonjs",
      "target": "ES2015",
      "lib": [
        "dom",
        "es2016"
      ],
      "declaration": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "declarationMap": true,
      "noFallthroughCasesInSwitch": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true,
      "typeRoots": [
        "./typings/**",
        "./node_modules/@types"
      ],
      "paths": {
        "@slopes/avm/*": ["src/apis/avm/*"],
        "@slopes/platform/*": ["src/apis/platform/*"],
        "@slopes/admin/*": ["src/apis/admin/*"],
        "@slopes/keystore/*": ["src/apis/keystore/*"],
        "@slopes/utils/*": ["src/utils/*"],
        "@slopes/core": ["src/slopes"],
        "@slopes": ["src/"]
      }
    },
    "exclude": [
      "node_modules",
      "typings"
    ],
    "typeAcquisition": {
      "enable": true,
      "exclude": ["bn.js"]
    }
  }
