{
    "compilerOptions": {
      "outDir": "./dist/",
      "baseUrl": ".",
      "module": "commonjs",
      "target": "ES2015",
      "lib": [
        "dom",
        "es2016"
      ],
      "allowUmdGlobalAccess": true,
      "declaration": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "declarationMap": true,
      "noFallthroughCasesInSwitch": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true,
      "typeRoots": [
        "./dist/**",
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules",
    ],
    "typeAcquisition": {
      "enable": true,
      "exclude": ["bn.js"]
    }
  }
